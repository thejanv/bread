{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "src"
  ], // which files to compile
  "exclude": [
    "node_modules"
  ], // which files to skip
}